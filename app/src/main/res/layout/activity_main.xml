<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_text1"
            android:layout_width="128dp"
            android:layout_height="140dp"
            android:layout_gravity="start"
            android:background="#ff9933"
            android:gravity="center"
            android:text="@string/text1"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_text2"
            android:layout_width="128dp"
            android:layout_height="140dp"
            android:background="@color/beautifulGreen"
            android:gravity="center"
            android:text="@string/text2"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_text3"
            android:layout_width="128dp"
            android:layout_height="140dp"
            android:background="#b3e6ff"
            android:gravity="center"
            android:text="@string/text3"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <Button
            android:id="@+id/textview_text4"
            android:layout_width="128dp"
            android:layout_height="140dp"
            android:layout_gravity="start"
            android:background="#b3e6ff"
            android:gravity="center"
            android:text="@string/butonText1"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:src="@drawable/android" />

        <Button
            android:id="@+id/textview_text5"
            android:layout_width="128dp"
            android:layout_height="140dp"
            android:layout_gravity="start"
            android:background="#ff9933"
            android:gravity="center"
            android:text="@string/butonText1"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/beautifulGreen"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="This is an EditText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="This another EditText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/beautifulGreen"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:text="Notify me" />

        <Switch
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:text="Auto backup" />
    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="2.5"
        android:stepSize="0.5" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"/>
</LinearLayout>

